<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background putih -->
    <solid android:color="#FFFFFF" />

    <!-- Sudut sedikit rounded agar terlihat modern tapi formal -->
    <corners android:radius="6dp" />

    <!-- Padding sempit agar terasa seperti nota pabrik -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />

    <!-- Border tipis abu-abu gelap agar terlihat profesional -->
    <stroke
        android:width="1dp"
        android:color="#A5D6A7" />
</shape>
