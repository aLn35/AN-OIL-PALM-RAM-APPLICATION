<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFF7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- === HEADER CARD === -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:elevation="4dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_card">

            <!-- LEFT INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNama"
                    android:text="Nama Pelanggan"
                    android:textColor="#1B5E20"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:text="08xx"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLokasi"
                    android:text="Lokasi"
                    android:textSize="14sp"
                    android:textColor="#777"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCatatan"
                    android:text="Catatan pelanggan"
                    android:textSize="13sp"
                    android:textColor="#999"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- TOTAL UTANG -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:text="Total Utang"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalUtang"
                    android:text="Rp 0,-"
                    android:textColor="#D84315"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- === ACTION BUTTONS === -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnKelolaUtang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Transaksi"
                android:textColor="@android:color/white"
                android:backgroundTint="#1B5E20"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Edit"
                android:backgroundTint="#1976D2"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnHapus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Hapus"
                android:backgroundTint="#D32F2F"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- === TOGGLE RIWAYAT === -->
        <TextView
            android:id="@+id/tvToggleHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sembunyikan Riwayat"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_toggle"
            android:layout_marginBottom="14dp" />

        <!-- LABEL -->
        <TextView
            android:text="Riwayat Transaksi Utang"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#1B5E20"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- LOADING -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <!-- LIST RIWAYAT -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</ScrollView>
