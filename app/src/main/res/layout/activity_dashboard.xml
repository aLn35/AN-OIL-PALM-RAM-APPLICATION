<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFF7">

    <!-- AREA SCROLL KONTEN DASHBOARD -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TITLE -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard KRS"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="20dp" />
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="12dp"/>

            <!-- ======= CARD-CARD DASHBOARD (SAMA KAYAK PUNYAMU TADI) ======= -->
            <!-- ROW 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/cardIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card_dashboard"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tvIncomeTitle"
                        android:text="Total Pendapatan"
                        android:textColor="#777"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvIncome"
                        android:text="Rp 0"
                        android:textColor="#1B8A36"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardExpense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_dashboard"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tvExpenseTitle"
                        android:text="Total Pengeluaran"
                        android:textColor="#777"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvExpense"
                        android:text="Rp 0"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- ROW 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardProfit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card_dashboard"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tvProfitTitle"
                        android:text="Keuntungan Bersih"
                        android:textColor="#777"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvProfit"
                        android:text="Rp 0"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardDebt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/card_dashboard"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tvDebtTitle"
                        android:text="Total Utang Pelanggan"
                        android:textColor="#777"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvDebt"
                        android:text="Rp 0"
                        android:textColor="#D84315"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- TABS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tabTransaksi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Transaksi Terbaru"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:background="@drawable/tab_selected" />

                <TextView
                    android:id="@+id/tabUtang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Utang Pelanggan"
                    android:textColor="#555"
                    android:background="@drawable/tab_unselected"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- LIST CONTAINER -->
            <LinearLayout
                android:id="@+id/containerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18dp" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/btnLogout"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_logout"
        android:layout_gravity="end"
        android:padding="6dp"
        android:contentDescription="logout"/>


    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
